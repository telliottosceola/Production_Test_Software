{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NCD Sensor Programmer",
  "version": "0.1.0",
  "identifier": "com.ncd.sensor-programmer",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "NCD Sensor Programmer",
        "width": 900,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/flasher/*": "flasher/",
      "resources/flasher/esptool/*": "flasher/esptool/",
      "resources/flasher/esptool/targets/*": "flasher/esptool/targets/",
      "resources/flasher/esptool/targets/stub_flasher/*": "flasher/esptool/targets/stub_flasher/"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
